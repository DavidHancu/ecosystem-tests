{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "masterIssue": true,
  "prConcurrentLimit": 25,
  "rebaseWhen": "conflicted",
  "ignoreDeps": [
    "@prisma/cli",
    "@prisma/client"
  ]
}
